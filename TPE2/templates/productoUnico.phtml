            <label for="consulta" class="form-label">Consulta</label>
            <textarea class="form-input" id="consulta" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-danger">REALIZAR CONSULTA</button>
        </form>
      </div>
    </div>
  </div>